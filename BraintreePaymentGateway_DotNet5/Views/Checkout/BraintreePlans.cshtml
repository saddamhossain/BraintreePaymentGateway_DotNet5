@model List<Braintree.Plan>
@{
    ViewData["Title"] = "BraintreePlans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5> @item.Name </h5>
                    <div class="card-text">
                        <p> Description:  @item.Description</p>
                        <p> Plan Price:  @item.Price</p>
                        <p> Trial Period:  @item.TrialPeriod</p>
                        <p> Trial Duration:  @item.TrialDuration (days)</p>
                    </div>
                </div>
            </div>

            @Html.ActionLink("Subscribe to this plan", "SubscribeToPlan", "Checkout", new { id = item.Id }, new { @class = "btn btn-success" })

        </div>
    }
</div>

